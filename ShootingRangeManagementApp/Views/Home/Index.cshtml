@model List<Store>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<a asp-action="Create" asp-controller="Home" class="btn btn-outline-success mt-4">Add New User</a>
<table class="mt-4 table table-hover table-bordered table-sm">
    <thead>
        <tr class="text-center">
            <td>Adı</td>
            <td>Balance</td>
            <td>Adres</td>

            <td class="text-center">User Process</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="text-center">
            

            <td>@item.StoreName</td>
            <td>@item.Balance</td>
            <td>@item.Address</td>


            <td>
                <div class="text-center">
                    <a asp-action="Index" asp-controller="Store" asp-route-id="@item.StoreId" class="btn btn-outline-dark">
                        Store Details
                    </a>
                        <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.StoreId" class="btn btn-outline-danger">


                            <img width="25" height="25" src="~/images/delete.png" />  Delete User
                        </a>
                        <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.StoreId" class="btn btn-outline-info">

                            <img width="25" height="25" src="~/images/edit.png" />   Edit User
                        </a>
                </div>

            </td>
        </tr>}
    </tbody>
</table>

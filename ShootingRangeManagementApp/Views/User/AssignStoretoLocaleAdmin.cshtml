@model AdminStoreAssignSendDto



<form action="AssignRole" method="post" class="p-4 w-75 mx-auto shadow">
    <input type="hidden" asp-for="@Model.UserId" />

    <div class="list-group">
        @for (int i = 0; i < Model.adminStores.Count; i++)
        {
            <input type="hidden" asp-for="@Model.adminStores[i].StoreName" />
            <input type="hidden" asp-for="@Model.adminStores[i].StoreId" />
            <label class="list-group-item">
                <input class="form-check-input me-1" asp-for="@Model.adminStores[i].Exist" />
                @Model.adminStores[i].StoreName
            </label>
        }
            
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save </button>
    </div>
    <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>

</form>
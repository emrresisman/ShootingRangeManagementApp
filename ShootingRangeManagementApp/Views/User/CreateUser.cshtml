@model UserAdminCreateDto
    <div class="col-md-12">
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-ban"></i> Warning!</h5>
            If you add user from this panel, user password is equal to username that you enter.
        </div>
    </div>


<form action="CreateUser" method="post" class="p-4 w-75 mx-auto shadow">
    
    <div class="mb-3">
        <label> User Name:</label>
        <input asp-for="@Model.Username" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.Username"></span>
    </div>
    
    
    <div class="mb-3">
        <label> Email:</label>
        <input asp-for="@Model.Email" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Register </button>
    </div>
    <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>

</form>
